<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="8dp"
    android:background="@drawable/borderradius">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">
        <View
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:background="#00695c"
            android:layout_margin="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:weightSum="6"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/place_name"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:textSize="30sp"
                android:textFontWeight="400"
                android:layout_height="wrap_content"
                android:text="Actions on GOogle" />

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:src="@drawable/ic_lens" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/place_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Creating Actions for the Google Assistant requires a breadth of design expertise (for example, voice user interface design, interaction design, v"/>

            <ImageView
                android:id="@+id/place_img"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/hero"
                android:scaleType="centerCrop"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>